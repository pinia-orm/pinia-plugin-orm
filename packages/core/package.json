{
  "name": "pinia-plugin-orm",
  "type": "module",
  "version": "0.0.2",
  "description": "The Pinia plugin to enable Object-Relational Mapping access to the Pinia Store.",
  "author": "Elone Hoo <hi@elonehoo.me>",
  "license": "MIT",
  "keywords": [
    "pinia-plugin",
    "orm"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./*": "./*",
    "./decorators": {
      "types": "./dist/decorators.d.ts",
      "require": "./dist/decorators.cjs",
      "import": "./dist/decorators.js"
    },
    "./casts": {
      "types": "./dist/casts.d.ts",
      "require": "./dist/casts.cjs",
      "import": "./dist/casts.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "global.d.ts"
  ],
  "scripts": {
    "dev": "tsup --watch src",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test:watch": "vue-demi-switch 3 && vitest --watch",
    "test:ui": "vue-demi-switch 3 && vitest --ui",
    "test:2": "vue-demi-switch 2 vue2 && vitest --run",
    "test:3": "vue-demi-switch 3 && vitest --run",
    "coverage": "vue-demi-switch 3 && vitest --run --coverage",
    "test": "pnpm run test:3"
  },
  "peerDependencies": {
    "pinia": ">=2.0.29"
  },
  "dependencies": {
    "@pinia-plugin-orm/normalizr": "workspace:*"
  },
  "devDependencies": {
    "@pinia/testing": "^0.0.14",
    "@types/uuid": "^9.0.0",
    "@vue/composition-api": "^1.7.1",
    "@vue/test-utils": "^2.2.10",
    "core-js": "^3.27.2",
    "happy-dom": "^8.2.6",
    "mkdist": "^1.1.1",
    "nanoid": "^4.0.1",
    "pinia": "^2.0.30",
    "size-limit": "^8.1.2",
    "std-env": "^3.3.2",
    "uuid": "^9.0.0",
    "vue": "^3.2.47",
    "vue-demi": "^0.13.11",
    "vue2": "npm:vue@^2.7.14"
  },
  "pnpm": {
    "packageExtensions": {
      "@vue/composition-api": {
        "peerDependencies": {
          "vue": "*"
        }
      }
    }
  }
}
